<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android                                   ="http://schemas.android.com/apk/res/android"
    android:layout_width                            ="match_parent"
    android:layout_height                           ="wrap_content">
    
    <LinearLayout
        android:layout_width                        ="match_parent"
        android:layout_height                       ="wrap_content"
        android:orientation                         ="vertical"
        android:padding                             ="8dp">
        <RelativeLayout
            android:layout_width                    ="match_parent"
            android:layout_height                   ="wrap_content">

            <ImageView
                android:id                          ="@+id/imageView"
                android:layout_width                ="50dp"
                android:layout_height               ="50dp"
                android:layout_marginEnd            ="8dp"
                android:src                         ="@drawable/ic_contact_calendar_black" />

            <TextView
                android:id                          ="@+id/recyclerContactName"
                android:layout_width                ="wrap_content"
                android:layout_height               ="wrap_content"
                android:layout_toEndOf              ="@id/imageView"
                android:text                        ="@string/contact_name_dialog"
                android:textColor                   ="@android:color/black"
                android:textSize                    ="18sp"
                android:textStyle                   ="bold" />

            <TextView
                android:id                          ="@+id/recyclerContactPhone"
                android:layout_width                ="wrap_content"
                android:layout_height               ="wrap_content"
                android:layout_below                ="@id/recyclerContactName"
                android:layout_toEndOf              ="@id/imageView"
                android:text                        ="@string/contact_phone_dialog" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width                    ="match_parent"
            android:layout_height                   ="wrap_content"
            android:id                              ="@+id/expandableLayout"
            android:visibility                      ="visible">

            <TextView
                android:layout_width                ="wrap_content"
                android:layout_height               ="wrap_content"
                android:id                          ="@+id/contactMailText"
                android:text                        ="@string/contact_mail"
                android:paddingStart                ="5dp"
                android:paddingEnd                  ="30dp"/>

            <TextView
                android:layout_width                ="wrap_content"
                android:layout_height               ="wrap_content"
                android:id                          ="@+id/recyclerContactMail"
                android:text                        ="@string/contact_mail"
                android:layout_toEndOf              ="@+id/contactMailText"/>

            <TextView
                android:layout_width                ="wrap_content"
                android:layout_height               ="wrap_content"
                android:id                          ="@+id/contactCountryText"
                android:text                        ="@string/contact_country"
                android:layout_below                ="@+id/recyclerContactMail"
                android:paddingStart                ="5dp"
                android:paddingEnd                  ="20dp"/>

            <TextView
                android:layout_width                ="wrap_content"
                android:layout_height               ="wrap_content"
                android:id                          ="@+id/recyclerContactCountry"
                android:text                        ="@string/contact_country"
                android:layout_toEndOf              ="@+id/contactMailText"
                android:layout_below                ="@+id/recyclerContactMail"/>

            <TextView
                android:layout_width                ="wrap_content"
                android:layout_height               ="wrap_content"
                android:id                          ="@+id/contactGenderText"
                android:text                        ="@string/contact_gender"
                android:layout_below                ="@+id/contactCountryText"
                android:paddingStart                ="5dp"
                android:paddingEnd                  ="20dp"/>

            <TextView
                android:layout_width                ="wrap_content"
                android:layout_height               ="wrap_content"
                android:id                          ="@+id/recyclerContactGender"
                android:text                        ="@string/contact_gender"
                android:layout_toEndOf              ="@+id/contactMailText"
                android:layout_below                ="@+id/contactCountryText"/>

            <Button
                android:id                          ="@+id/editBtn"
                android:layout_width                ="wrap_content"
                android:layout_height               ="wrap_content"
                style                               ="@style/MyApp.Button"
                android:text                        ="@string/BTN_EDIT"
                android:layout_margin               ="10dp"
                android:layout_below                ="@+id/recyclerContactGender"
                android:layout_toEndOf              ="@+id/contactCountryText"/>
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>